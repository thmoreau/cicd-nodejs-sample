{
  "name": "cicd-nodejs-sample",
  "version": "1.0.0",
  "description": "A sample project for CI/CD chain testing purpose",
  "main": "server.js",
  "scripts": {
    "mocha": "mocha --recursive **/*.test.js --exclude **/node_modules/** --reporter mocha-junit-reporter --reporter-options mochaFile=./reports/test/unit/test-results.xml --reporter list",
    "test": "nyc npm run mocha",
    "eslint": "eslint **/*.js -o reports/eslint/checkstyle-results.xml -f checkstyle || exit 0"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/*.test.js",
      "**/node_modules/**"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "temp-dir": "./tmp",
    "report-dir": "./reports/test/coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thmoreau/cicd-nodejs-sample.git"
  },
  "author": "Thomas Moreau",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thmoreau/cicd-nodejs-sample/issues"
  },
  "homepage": "https://github.com/thmoreau/cicd-nodejs-sample#readme",
  "dependencies": {
    "express": "^4.16.3"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^5.3.0",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "nyc": "^12.0.2",
    "supertest": "^3.1.0"
  }
}
